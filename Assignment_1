function takingvaluesfromuser()
{
var rows =4;
  var cols =4;
  var matrice = [] ;
 for (var i = 0; i < rows; i++) {
        matrice.push([0])
        input  = document.getElementById("txtInput").value;
        for (var j = 0; j < cols; j++) {
            matrice[i][j] = input.split(' ');
        }
    }
    return matrice;
}
